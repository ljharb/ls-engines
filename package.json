{
	"name": "ls-engines",
	"version": "0.7.0",
	"description": "Determine if your dependency graph's stated \"engines\" criteria is met.",
	"bin": {
		"ls-engines": "bin/ls-engines"
	},
	"exports": {
		"./package.json": "./package.json"
	},
	"scripts": {
		"prepack": "npmignore --auto --commentLines=autogenerated",
		"prepublish": "not-in-publish || npm run prepublishOnly",
		"prepublishOnly": "safe-publish-latest",
		"lint": "eslint . bin/*",
		"pretest": "npm run lint",
		"tests-only": "NODE_OPTIONS='--require=./test/mocks' tape 'test/*.js'",
		"test": "npm run tests-only",
		"posttest": "npx aud --production",
		"test:update-mocks": "curl -L https://nodejs.org/dist/index.json -o test/mocks/node-versions.json && npm show --json npm versions > test/mocks/npm-versions.json",
		"version": "auto-changelog && git add CHANGELOG.md",
		"postversion": "auto-changelog && git add CHANGELOG.md && git commit --no-edit --amend && git tag -f \"v$(node -e \"console.log(require('./package.json').version)\")\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ljharb/ls-engines.git"
	},
	"keywords": [
		"engines",
		"npm",
		"node",
		"node_modules"
	],
	"author": "Jordan Harband <ljharb@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ljharb/ls-engines/issues"
	},
	"homepage": "https://github.com/ljharb/ls-engines#readme",
	"engines": {
		"node": ">= 18 || ^16 || ^14.15 || ^12.22",
		"npm": ">=8"
	},
	"dependencies": {
		"@npmcli/arborist": "^5.2.0",
		"colors": "=1.4.0",
		"fast_array_intersect": "^1.1.0",
		"get-dep-tree": "^1.0.2",
		"get-json": "^1.0.1",
		"json-file-plus": "^3.3.1",
		"lockfile-info": "^1.0.0",
		"object.fromentries": "^2.0.5",
		"object.values": "^1.1.5",
		"pacote": "^13.5.0",
		"promise.allsettled": "^1.0.5",
		"semver": "^7.3.7",
		"table": "^6.8.0",
		"yargs": "^17.5.1"
	},
	"devDependencies": {
		"@ljharb/eslint-config": "^21.0.0",
		"aud": "^2.0.0",
		"auto-changelog": "^2.4.0",
		"eslint": "=8.8.0",
		"npmignore": "^0.3.0",
		"nyc": "^15.1.0",
		"safe-publish-latest": "^2.0.0",
		"tape": "^5.5.3"
	},
	"auto-changelog": {
		"output": "CHANGELOG.md",
		"template": "keepachangelog",
		"unreleased": false,
		"commitLimit": false,
		"backfillLimit": false
	},
	"publishConfig": {
		"ignore": [
			"test/fixtures/**",
			"test/mocks/**",
			".github/workflows"
		]
	}
}
